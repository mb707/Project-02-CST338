<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingTop="?attr/actionBarSize"
	android:paddingStart="24dp"
	android:paddingEnd="24dp"
	android:paddingBottom="24dp"
	android:clipToPadding="false"
	tools:context=".CreateFlashcardActivity">


	<TextView
		android:id="@+id/createFlashcard_TextView"
		android:layout_width="325dp"
		android:layout_height="60dp"
		android:gravity="center"
		android:paddingTop="12dp"
		android:text="Create Flashcard"
		android:textColor="@color/black"
		android:textSize="24sp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="24dp"/>

	<EditText
		android:id="@+id/frontText_EditText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="100dp"
		android:hint="Enter Front Text"
		app:layout_constraintTop_toBottomOf="@id/createFlashcard_TextView"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0" />


	<EditText
		android:id="@+id/backText_EditText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="28dp"
		android:hint="@string/enter_back_text"
		app:layout_constraintTop_toBottomOf="@id/frontText_EditText"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0" />

	<Button
		android:id="@+id/nextFlashcardButton"
		android:layout_width="123dp"
		android:layout_height="80dp"
		android:layout_marginTop="128dp"
		android:background="@drawable/blue_rounded_button"
		android:text="@string/next"
		android:textAllCaps="false"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@+id/signOut_Button"
		app:layout_constraintStart_toEndOf="@id/dashboardButton"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.55"
		app:layout_constraintTop_toBottomOf="@id/backText_EditText"
		app:layout_constraintVertical_bias="0.0" />

	<Button
		android:id="@+id/dashboardButton"
		android:layout_width="123dp"
		android:layout_height="80dp"
		android:layout_marginTop="128dp"
		android:layout_marginBottom="34dp"
		android:background="@drawable/blue_rounded_button"
		android:text="@string/dashboard"
		android:textAllCaps="false"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@+id/signOut_Button"
		app:layout_constraintEnd_toStartOf="@+id/nextFlashcardButton"
		app:layout_constraintHorizontal_bias="0.55"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/backText_EditText"
		app:layout_constraintVertical_bias="0.0" />

	<Button
		android:id="@+id/signOut_Button"
		android:layout_width="280dp"
		android:layout_height="80dp"
		android:layout_marginTop="24dp"
		android:background="@drawable/blue_rounded_button"
		android:text="@string/sign_out"
		android:textAllCaps="false"
		android:textStyle="bold"
		app:layout_constraintTop_toBottomOf="@id/dashboardButton"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>