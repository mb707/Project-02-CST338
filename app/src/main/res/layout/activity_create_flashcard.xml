<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/createFlashcardLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingTop="?attr/actionBarSize"
	android:paddingStart="24dp"
	android:paddingEnd="24dp"
	android:paddingBottom="24dp"
	android:clipToPadding="false"
	tools:context=".CreateFlashcardActivity">

	<!-- TITLE -->
	<TextView
		android:id="@+id/createFlashcard_Title"
		android:layout_width="0dp"
		android:layout_height="60dp"
		android:gravity="center"
		android:text="Create Flashcard"
		android:textColor="@color/black"
		android:textSize="24sp"
		android:textStyle="bold"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="24dp"/>

	<!-- FRONT TEXT -->
	<EditText
		android:id="@+id/frontTextEdit"
		android:layout_width="0dp"
		android:layout_height="60dp"
		android:layout_marginTop="48dp"
		android:hint="Enter Front Text"
		android:padding="16dp"
		android:textSize="16sp"
		app:layout_constraintTop_toBottomOf="@id/createFlashcard_Title"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginStart="32dp"
		android:layout_marginEnd="32dp"/>


	<!-- BACK TEXT -->
	<EditText
		android:id="@+id/backTextEdit"
		android:layout_width="0dp"
		android:layout_height="60dp"
		android:layout_marginTop="24dp"
		android:hint="@string/enter_back_text"
		android:padding="16dp"
		android:textSize="16sp"
		app:layout_constraintTop_toBottomOf="@id/frontTextEdit"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginHorizontal="32dp" />

	<!-- NEXT BUTTON -->
	<Button
		android:id="@+id/nextFlashcardButton"
		android:layout_width="140dp"
		android:layout_height="75dp"
		android:layout_marginTop="48dp"
		android:background="@drawable/blue_rounded_button"
		android:text="@string/next"
		android:textAllCaps="false"
		android:textStyle="bold"
		app:layout_constraintTop_toBottomOf="@id/backTextEdit"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<!-- DASHBOARD BUTTON -->
	<Button
		android:id="@+id/dashboardButton"
		android:layout_width="140dp"
		android:layout_height="75dp"
		android:layout_marginTop="16dp"
		android:background="@drawable/blue_rounded_button"
		android:text="@string/dashboard"
		android:textAllCaps="false"
		android:textStyle="bold"
		app:layout_constraintTop_toBottomOf="@id/nextFlashcardButton"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<!-- SIGN OUT BUTTON -->
	<Button
		android:id="@+id/signOutBtn"
		android:layout_width="280dp"
		android:layout_height="80dp"
		android:layout_marginTop="24dp"
		android:background="@drawable/blue_rounded_button"
		android:text="@string/sign_out"
		android:textAllCaps="false"
		android:textStyle="bold"
		app:layout_constraintTop_toBottomOf="@id/dashboardButton"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>