<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/createFlashcardLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingTop="?attr/actionBarSize"
	android:paddingStart="24dp"
	android:paddingEnd="24dp"
	android:paddingBottom="24dp"
	android:clipToPadding="false"
	tools:context=".CreateFlashcardActivity">

	<!-- TITLE -->
	<TextView
		android:id="@+id/createFlashcard_Title"
		android:layout_width="325dp"
		android:layout_height="60dp"
		android:paddingTop="12dp"
		android:gravity="center"
		android:text="@string/create_flashcard"
		android:textColor="@color/black"
		android:textSize="24sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.053" />

	<!-- FRONT TEXT -->
	<EditText
		android:id="@+id/frontTextEdit"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="124dp"
		android:hint="@string/enter_front_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/createFlashcard_Title" />


	<!-- BACK TEXT -->
	<EditText
		android:id="@+id/backTextEdit"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="28dp"
		android:hint="@string/enter_back_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/frontTextEdit" />


	<Button
		android:id="@+id/createFlashcardButton"
		android:layout_width="280dp"
		android:layout_height="80dp"
		android:layout_marginTop="128dp"
		android:background="@drawable/blue_rounded_button"
		android:text="@string/create"
		android:textAllCaps="false"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@+id/signOutBtn"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.492"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/backTextEdit"
		app:layout_constraintVertical_bias="0.035" />

	<Button
		android:id="@+id/signOutBtn"
		android:layout_width="280dp"
		android:layout_height="80dp"
		android:layout_marginTop="24dp"
		android:background="@drawable/blue_rounded_button"
		android:text="@string/sign_out"
		android:textAllCaps="false"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.492"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/createFlashcardButton" />

</androidx.constraintlayout.widget.ConstraintLayout>